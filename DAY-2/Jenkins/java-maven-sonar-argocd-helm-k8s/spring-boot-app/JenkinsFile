pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }
  environment {
    APP_PATH = 'DAY-2/java-maven-sonar-argocd-helm-k8s/spring-boot-app'
    DEPLOYMENT_PATH = 'DAY-2/java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml'
    SONAR_URL = "http://3.90.147.250:9000"
    DOCKER_IMAGE = "sanjayharish/ultimate-cicd:${BUILD_NUMBER}"
    GIT_REPO_NAME = "ELEVATE_LABES"
    GIT_USER_NAME = "sanjayhar"
  }
  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/sanjayhar/ELEVATE_LABES.git'
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          cd ${APP_PATH}
          mvn clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd ${APP_PATH}
            mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      steps {
        script {
          sh '''
            cd ${APP_PATH}
            docker build -t ${DOCKER_IMAGE} .
          '''
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            dockerImage.push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "sanjay.xyz@gmail.com"
            git config user.name "sanjayharish"
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" ${DEPLOYMENT_PATH}
            git add ${DEPLOYMENT_PATH}
            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
          '''
        }
      }
    }
  }
}
